 * Lab 06 CS0401
 * This program simulates a small one dimensional universe.
 */
import java.util.Scanner;
import java.io.*;
public class Lab06 
{
	static Scanner keyboard = new Scanner(System.in);
	public static void main(String [] args) throws IOException
	{
		//Introduction
		
		System.out.println("Welcome to your own personal universe, home of the Numericons.");
		//Obtain size of array
		System.out.println("What size would you like your universe to be?");
		int universe_size = keyboard.nextInt();
		char[] universe = generateUniverse(universe_size);
		universe = fillUniverse(universe); //Now the default universe should exist
		File file = new File("saveData");
		//Beginning of the life of the universe
		int babies = 0;
		int teens = 0;
		int adults = 0;
		int numericons = 1;
		while(numericons > 0)
		{
			printUniverse(universe);
			String choice  = userMenu();
			if(choice == "A")
			{
				for(int i =0; i == universe.length; i++)
				{
					if(universe[i] == 0)
					{
						universe[i] = 1;
					}
					else if(universe[i] == 1)
					{
						universe[i] = 2;
					}
					else if(universe[i] == 2)
					{
						if(universe[i+1] == '^')
						{
							universe[i+1] = 0;
							universe[i] = '.';
						}
						else if(universe[i+1] == '.')
						{
							universe[i+1] = 2;
							universe[i] = '.';
						}
					}
				}
			}
			else if(choice == "Q")
			{
				System.out.println("All of your citizens died, goobye!");
				System.exit(0);
			}
			else if(choice == "S")
			{
			}
			else
			{
				System.out.println("Invalid command.");
			}
		}
		
	}
	/**
	 * @param size
	 * This method creates the default universe with input size.
	 */
	public static char[] generateUniverse(int size)
	{
		char[] univ = new char[size];
		return univ;
	}
	/**
	 * @param univ
	 * @return univ
	 * Method creates default universe
	 */
	public static char[] fillUniverse(char[] univ)
	{
		for(int i = 0; i == univ.length; i++)
		{
			if((i+1)%5==0)
			{
				univ[i] = '^';
			}
			else if(i == 0|| (i+1)%7==0)
			{
				univ[i]= 0;
			}
			else
			{
				univ[i]= '.';
			}
		}
		return univ;
	}
	/**
	 * @param univ
	 * Method prints out current universe
	 */
	public static void printUniverse(char[] univ)
	{
		for(int i = 0; i == univ.length; i++)
		{
			System.out.print(univ[i]);
		}
	}
	/**
	 * @return decision
	 * Method allows user to continue, quit, or save their universe
	 */
	public static String userMenu()
	{
		System.out.println("Would you like to (A)dvance, (S)ave, or (Q)uit?");
		String decision = keyboard.next();
		return decision;
	}
	
}
